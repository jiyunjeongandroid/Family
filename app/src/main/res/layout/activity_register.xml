<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <ImageButton
        android:id="@+id/btn_dog"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="100dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_dog"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/btn_cat"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="100dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/btn_dog"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_cat_img"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/txt_family"
        android:layout_width="98dp"
        android:layout_height="42dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/gaegu_bold"
        android:gravity="center"
        android:text="Family"
        android:textColor="#f4b6bb"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_species"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="196dp"
        android:fontFamily="@font/gaegu_bold"
        android:text="SPECIES"
        android:textColor="#f4b6bb"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_species"
        android:layout_width="180dp"
        android:layout_height="32dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toEndOf="@+id/txt_species"
        app:layout_constraintTop_toBottomOf="@+id/btn_cat"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/gaegu_bold"
        android:text="NAME"
        android:textColor="#f4b6bb"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_species" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:fontFamily="@font/gaegu_bold"
        android:hint="tan"
        android:inputType="textPersonName"
        android:textColor="#adab89"
        android:textColorHint="#C6C6C6"
        app:layout_constraintStart_toEndOf="@+id/txt_name"
        app:layout_constraintTop_toBottomOf="@+id/spinner_species"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/txt_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/gaegu_bold"
        android:text="BIRTH"
        android:textColor="#f4b6bb"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_name" />

    <EditText
        android:id="@+id/et_birth"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:fontFamily="@font/gaegu_bold"
        android:hint="2022/04/21"
        android:inputType="date"
        android:textColor="#adab89"
        android:textColorHint="#C6C6C6"
        app:layout_constraintStart_toEndOf="@+id/txt_birthday"
        app:layout_constraintTop_toBottomOf="@+id/et_name"
        tools:ignore="TouchTargetSizeCheck" />

    <RadioGroup
        android:id="@+id/radio_sex"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="44dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_birth">

        <RadioButton
            android:id="@+id/radio_girl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#F6D0D0"
            android:fontFamily="@font/gaegu_bold"
            android:text="Girl"
            android:textColor="#adab89" />

        <RadioButton
            android:id="@+id/radio_boy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:buttonTint="#F6D0D0"
            android:fontFamily="@font/gaegu_bold"
            android:text="Boy"
            android:textColor="#adab89" />

    </RadioGroup>

    <TextView
        android:id="@+id/txt_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/gaegu_bold"
        android:text="SEX"
        android:textColor="#f4b6bb"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_birthday" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="#adab89"
        android:fontFamily="@font/gaegu_bold"
        android:text="OK"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radio_sex" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:background="#FFFFFF"
        app:tint="#adab89"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back_24"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>